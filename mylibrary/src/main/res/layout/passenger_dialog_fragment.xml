<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/top_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/secondaryColor">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:id="@+id/close_page"
                android:padding="16dp"
                android:contentDescription="@null"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger"
                android:id="@+id/dialog_title"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/close_page"
                android:textSize="16sp"
                android:textColor="@color/white"/>

    </RelativeLayout>

    <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/passenger_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar"
            app:ms_arrowSize="8dp"
            app:ms_floatingLabelText="Title"
            app:ms_hint="Tile"
            app:ms_multiline="true"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passenger_title">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/passenger_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Name"
                android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/passenger_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:ms_arrowSize="8dp"
            app:ms_floatingLabelText="ID Card"
            app:ms_hint="ID Card"
            app:ms_multiline="true"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passenger_id">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/passenger_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="ID Number"
                android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/input_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/yellowish"
            android:text="Input"
            android:textColor="@color/primaryTextColor"
            android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/top_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/secondaryColor">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:id="@+id/close_page"
                android:padding="16dp"
                android:contentDescription="@null"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger"
                android:id="@+id/dialog_title"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/close_page"
                android:textSize="16sp"
                android:textColor="@color/white"/>

    </RelativeLayout>

    <com.app.zuludin.mylibrary.floathint.spinner.SpinnerFloatingHint
            android:id="@+id/passenger_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar"
            app:spinnerHint="Header"/>

    <com.app.zuludin.mylibrary.floathint.edittext.EditTextFloatingHint
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Name"
            app:layout_constraintTop_toBottomOf="@+id/passenger_title"/>

    <com.app.zuludin.mylibrary.floathint.spinner.SpinnerFloatingHint
            android:id="@+id/passenger_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:spinnerHint="Header"/>

    <com.app.zuludin.mylibrary.floathint.edittext.EditTextFloatingHint
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="ID Number"
            app:layout_constraintTop_toBottomOf="@+id/passenger_id"/>

    <Button
            android:id="@+id/input_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/yellowish"
            android:text="Input"
            android:textColor="@color/primaryTextColor"
            android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
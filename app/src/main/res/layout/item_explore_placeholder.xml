<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:layout_width="100dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/placeholder_bg"
            android:id="@+id/placeholder_header_category"/>

    <LinearLayout
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_header_category">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header_category"
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header_category"
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header_category"
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
            android:layout_width="100dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:background="@color/placeholder_bg"
            android:id="@+id/placeholder_header"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_header">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/placeholder_image_1"/>

                <View
                        android:layout_width="100dp"
                        android:layout_height="16dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_image_1"
                        android:id="@+id/placeholder_name_1"
                        android:layout_marginTop="4dp"/>

                <View
                        android:layout_width="80dp"
                        android:layout_height="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_name_1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/placeholder_bg"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/placeholder_category_1"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/placeholder_image_2"/>

                <View
                        android:layout_width="100dp"
                        android:layout_height="16dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_image_2"
                        android:id="@+id/placeholder_name_2"
                        android:layout_marginTop="4dp"/>

                <View
                        android:layout_width="80dp"
                        android:layout_height="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_name_2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/placeholder_bg"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/placeholder_category_2"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholder_header"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="3dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/placeholder_image"/>

                <View
                        android:layout_width="100dp"
                        android:layout_height="16dp"
                        android:background="@color/placeholder_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_image"
                        android:id="@+id/placeholder_name"
                        android:layout_marginTop="4dp"/>

                <View
                        android:layout_width="80dp"
                        android:layout_height="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/placeholder_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp"
                        android:background="@color/placeholder_bg"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/placeholder_category"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>